{
	"info": {
		"_postman_id": "ai-loadbalancer-ecommerce-api",
		"name": "AI Load Balancer E-commerce API Collection",
		"description": "Comprehensive API collection for the AI Load Balancer E-commerce platform",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080/proxy"
		},
		{
			"key": "jwt_token",
			"value": ""
		},
		{
			"key": "user_id",
			"value": ""
		},
		{
			"key": "order_id",
			"value": ""
		},
		{
			"key": "payment_id",
			"value": ""
		}
